<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Mortar.Dashboard.Views.ConnectionDialog"
        Title="ConnectionDialog">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Top" ColumnDefinitions="*,*">
        <TextBlock Grid.Column="0" Text="Serial Port"/>
        <ComboBox Grid.Column="1" x:Name="SerialPort"/>
        
        <TextBlock Grid.Column="0" Text="Baud Rate"/>
        <NumericUpDown Grid.Column="1" Value="51200" x:Name="BaudRate"/>
    </Grid>
</Window>
